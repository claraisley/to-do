<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- data from the db to render on the page  -->
    <% JSON.stringify(data)%>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.10.1/css/mdb.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
      <!-- Oswald font -->
      <link href="https://fonts.googleapis.com/css?family=Oswald:400,600,700&display=swap" rel="stylesheet">

    <title>Add a task</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/tasks.css" type="text/css" />
    <link rel="stylesheet" href="/styles/modals.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

  </head>

  <header>
    <%- include('partials/navbar') %>
  </header>

  <body>

    <!-- Search form -->
    <div class="search-form">
      <input class="form-control" type="text" placeholder="Search" aria-label="Search">
      <button type="button" id="add-button" class="btn btn-warning btn-rounded">Add Task</button>
    </div>


  <div class="task-container">
  <div id="myLists">

    <article id="movies" data-category_id="1">
      <header>
        <div><i class="fas fa-film"></i>Movies and TV Shows </div>
      </header>
      <ul class="lists" id="movies1" data-category_id="1" draggable="true" ondragstart="drag(event)">
        <% for (const item of data) { %>
          <% if (item.category_id === 1) { %>
          <li> <%= item.input %> </li>
          <% } %>
        <%}%>
      </ul>
    </article>
    <article id="books" data-category_id="2">
      <header>
        <div><i class="fas fa-book-reader"></i>Books</div>
      </header>
      <ul class="lists" id="books1" data-category_id="2" draggable="true" ondragstart="drag(event)">
        <% for (const item of data) { %>
          <% if (item.category_id === 2) { %>
          <li> <%= item.input %> </li>
          <% } %>
        <%}%>
      </ul>

    </article>
    <article id="restaurants" data-category_id="3">
      <header>
        <div><i class="fas fa-utensils"></i>Restaurants</div>
      </header>
      <ul class="lists" id="restaurants1" data-category_id="3" draggable="true" ondragstart="drag(event)">
        <% for (const item of data) { %>
          <% if (item.category_id === 3) { %>
          <li> <%= item.input %> </li>
          <% } %>
        <%}%>
      </ul>

    </article>
    <article id="products" data-category_id="4">
      <header>
        <div><i class="fas fa-shopping-basket"></i>Products</div>
      </header>
      <ul class="lists" id="products1" data-category_id="4" draggable="true" ondragstart="drag(event)">
        <% for (const item of data) { %>
          <% if (item.category_id === 4) { %>
          <li> <%= item.input %> </li>
          <% } %>
        <%}%>
      </ul>
    </article>
  </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  </body>
